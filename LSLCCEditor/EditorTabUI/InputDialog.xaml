<Window x:Class="LSLCCEditor.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="98" Width="385" ResizeMode="NoResize" WindowStartupLocation="Manual" SizeToContent="Height" >
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <StackPanel>
            <Border BorderThickness="1" BorderBrush="Black" Margin="8,8,8,0">
            <TextBox x:Name="InputTextBox" />
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,8,10">
                <Button Content="Ok" Click="OkButton_Click" HorizontalAlignment="Center" Margin="0,0,10,0" Width="80"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="80" />
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
