<Window x:Class="LSLCCEditor.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSLCCEditor"
        mc:Ignorable="d"
        Title="About" Height="300" MinHeight="200" MinWidth="200" Width="400" Icon="lsl_script_icon.ico" Topmost="True" ResizeMode="CanResize" Name="_this" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="105"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"  Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="50"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Image  Source="lsl_script_icon.ico" Width="46" Height="46"></Image>
                <TextBlock VerticalAlignment="Center" Text="{Binding ElementName=_this, Path=NameAndVersion}"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Margin="6,10,0,0">Author: Eric A. Blundell</TextBlock>
        </Grid>
        <GroupBox Grid.Row="1" Margin="8" Header="Loaded Assemblies">
            <ListBox Name="LoadedAssembliesBox"/>
        </GroupBox>
    </Grid>
</Window>
