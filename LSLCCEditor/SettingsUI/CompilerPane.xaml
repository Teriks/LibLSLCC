<UserControl x:Class="LSLCCEditor.SettingsUI.CompilerPane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LSLCCEditor.SettingsUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Name="_this">

    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox ItemsSource="{Binding ElementName=_this, Path=CompilerConfigurations}" SelectedItem="{Binding ElementName=_this, Path=SelectedCompilerConfiguration}"></ComboBox>
            <CheckBox  DataContext="{Binding ElementName=_this, Path=CurrentCompilerConfiguration}" IsChecked="{Binding ElementName=_this, Path=CurrentCompilerConfiguration.OpenSimCompilerSettings.InsertCoOpTerminationCalls}">Insert Co-Op Termination Calls</CheckBox>
            <Button Click="SaveButton_OnClick">Save</Button>
         </StackPanel>
    </Grid>
</UserControl >
